<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<VBox minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="calc.Controller">
    <TextArea fx:id="textArea" editable="false" prefHeight="700"/>
    <HBox alignment="BOTTOM_LEFT">
        <TextField fx:id="textField"/>
        <Button fx:id="btPlus" onAction="#Plus" text="+"/>
        <Button fx:id="btMinus" onAction="#Minus" text="-"/>
        <Button fx:id="btMul" onAction="#Mul" text="*"/>
        <Button fx:id="btDiv" onAction="#Div" text="/"/>
        <Button fx:id="btRez" onAction="#Rez" text="="/>
    </HBox>
</VBox>
